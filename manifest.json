{
	"name": "GenderMag Tool 2015",
	"manifest_version": 2,
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.2",
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png",
		"default_title": "GenderMag Tool"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["script.js"],
			"css": [ "styles.css" ]
		}
	],
	"permissions": [
		"tabs",
		"unlimitedStorage",
		"<all_urls>"
	]
}