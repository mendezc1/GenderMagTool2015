{
	"name": "Inject sidebar",
	"manifest_version": 2,
	"description": "Inject a sidebar on the current tab when the page action is clicked",
	"version": "0.2",
	"background": {
		"page": "background.html"
	},
	"browser_action": {
		"default_popup": "popup.html",
		"default_icon": "icon.png",
		"default_title": "Inject sidebar"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["script.js"],
			"css": [ "styles.css" ]
		}
	],
	"permissions": [
		"tabs"
	]
}